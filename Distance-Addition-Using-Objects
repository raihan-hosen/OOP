#include <iostream>
using namespace std;

class Distance
{
    int meter, cm;

public:
    void putdata(int m, int c)
    {
        meter = m;
        cm = c;
    }
    void fulldistance(Distance d1, Distance d2)
    {
        meter = d1.meter + d2.meter;
        cm = d1.cm + d2.cm;
        if (cm >= 100)
        {
            meter += cm / 100;
            cm = cm % 100;
        }
    }
    void getdata()
    {
        cout << "Distance: " << meter << " meters and " << cm << " centimeters" << endl;
    }
};

int main()
{

    Distance d1, d2, d3;
    d1.putdata(2, 85); 
    d2.putdata(3, 75); 
    d3.fulldistance(d1, d2);
    d3.getdata();

    return 0;
}
